# Subdomain Configuration
# Update these values with your actual domain and server details

# Your main domain (replace with your actual domain)
DOMAIN=mymaindomain.com

# Server IP address (replace with your actual server IP)
SERVER_IP=YOUR_SERVER_IP_HERE

# Subdomain names
ALTA_SUBDOMAIN=alta.${DOMAIN}
IDESIGN_SUBDOMAIN=idesign.${DOMAIN}

# Admin email for SSL certificates
ADMIN_EMAIL=admin@implantaly.com

# Server user (for file permissions)
WEB_USER=www-data
WEB_GROUP=www-data

# Nginx configuration
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled

# Website directories
ALTA_PATH=/var/www/alta
IDESIGN_PATH=/var/www/idesign

# SSL certificate paths
SSL_CERT_PATH=/etc/letsencrypt/live
SSL_KEY_PATH=/etc/letsencrypt/live

# Log directories
ALTA_LOGS=${ALTA_PATH}/logs
IDESIGN_LOGS=${IDESIGN_PATH}/logs

# Backup directory
BACKUP_DIR=/backups

# Rate limiting
RATE_LIMIT=10r/s
RATE_BURST=20

# Security settings
SECURITY_HEADERS=true
GZIP_COMPRESSION=true
STATIC_CACHING=true

# Monitoring
HEALTH_CHECK_ENABLED=true
LOG_ROTATION_ENABLED=true
SSL_AUTO_RENEWAL=true
